<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.goharshad.arena.sakoo.EntekhabeDars"
    android:orientation="vertical"
    android:weightSum="10">

    <TextView
        android:id="@+id/fragment_entekhab_dars_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="انتخاب درس"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="16.5dp"
        android:textColor="@color/main_text_color1"
        android:background="@drawable/rounded_top_rectangle_dark"/>

    <ScrollView
        android:id="@+id/entekhabe_dars_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:background="@drawable/rounded_bottom_rectangle_white">
        <LinearLayout
            android:id="@+id/entekhabe_dars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

</LinearLayout>
