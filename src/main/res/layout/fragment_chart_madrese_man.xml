<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.goharshad.arena.sakoo.ChartMadreseMan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/chart_avg_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:padding="4dp"
            android:backgroundTint="@color/colorOrangeNormal"
            android:background="@drawable/rounded_rectangle_stroke_dark"></Spinner>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart_avg_barchart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"></com.github.mikephil.charting.charts.BarChart>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chart_madreseman_header_miangin_paye"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/txt_mianginpaye"
                android:textSize="@dimen/purposing_global_font"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/chart_madreseman_header_miangin_class"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:layout_margin="1dp"
                android:text="@string/txt_mianginclass"
                android:textSize="@dimen/purposing_global_font"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/chart_madreseman_header_nomre_shoma"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/txt_nomreshoma"
                android:textSize="@dimen/purposing_global_font"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/chart_madreseman_header_dars"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/txt_dars"
                android:textSize="@dimen/purposing_global_font"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/your_purpose_time_saturday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorBlueLight"
                android:gravity="center"
                android:textSize="@dimen/purposing_global_font"
                android:textColor="@color/colorDark_1" />

            <TextView
                android:id="@+id/suggested_time_saturday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorBlueLight"
                android:gravity="center"
                android:textSize="@dimen/purposing_global_font"
                android:textColor="@color/colorDark_1" />

            <TextView
                android:id="@+id/available_time_saturday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorBlueLight"
                android:gravity="center"
                android:textSize="@dimen/purposing_global_font"
                android:textColor="@color/colorDark_1" />

            <TextView
                android:id="@+id/purposing_weekday_saturday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorBlueLight"
                android:gravity="center"
                android:textSize="@dimen/purposing_weekday_font"
                android:text="@string/lesson_fizik1"
                android:textColor="@color/colorDark_1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/your_purpose_time_sunday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                android:gravity="center"
                android:textSize="@dimen/purposing_global_font"
                android:textColor="@color/colorDark_1" />

            <TextView
                android:id="@+id/suggested_time_sunday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                android:gravity="center"
                android:textSize="@dimen/purposing_global_font"
                android:textColor="@color/colorDark_1" />

            <TextView
                android:id="@+id/available_time_sunday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                android:gravity="center"
                android:textSize="@dimen/purposing_global_font"
                android:textColor="@color/colorDark_1" />

            <TextView
                android:id="@+id/purposing_weekday_sunday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                android:gravity="center"
                android:text="@string/lesson_jameshenasi1"
                android:textSize="@dimen/purposing_weekday_font"
                android:textColor="@color/colorDark_1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/your_purpose_time_monday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorBlueLight"
                android:gravity="center"
                android:textSize="@dimen/purposing_global_font"
                android:textColor="@color/colorDark_1"/>

            <TextView
                android:id="@+id/suggested_time_monday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorBlueLight"
                android:gravity="center"
                android:textSize="@dimen/purposing_global_font"
                android:textColor="@color/colorDark_1" />

            <TextView
                android:id="@+id/available_time_monday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorBlueLight"
                android:gravity="center"
                android:textSize="@dimen/purposing_global_font"
                android:textColor="@color/colorDark_1" />

            <TextView
                android:id="@+id/purposing_weekday_monday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorBlueLight"
                android:gravity="center"
                android:text="@string/lesson_hendese1"
                android:textSize="@dimen/purposing_weekday_font"
                android:textColor="@color/colorDark_1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/your_purpose_time_tuesday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                android:gravity="center"
                android:textSize="@dimen/purposing_global_font"
                android:textColor="@color/colorDark_1" />

            <TextView
                android:id="@+id/suggested_time_tuesday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                android:gravity="center"
                android:textSize="@dimen/purposing_global_font"
                android:textColor="@color/colorDark_1" />

            <TextView
                android:id="@+id/available_time_tuesday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                android:gravity="center"
                android:textSize="@dimen/purposing_global_font"
                android:textColor="@color/colorDark_1" />

            <TextView
                android:id="@+id/purposing_weekday_tuesday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                android:gravity="center"
                android:text="@string/lesson_joqrafia"
                android:textSize="@dimen/purposing_weekday_font"
                android:textColor="@color/colorDark_1"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
