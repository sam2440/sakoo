<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.goharshad.arena.sakoo.AnswerSetup"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/anssetuptoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#232323"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/anssetup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اطلاعات آزمون"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/activity_name_size"
                android:layout_marginRight="@dimen/activity_name_mr"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
        <EditText
            android:id="@+id/answer_setup_onvan"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="right"
            android:paddingRight="3dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ans_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عنوان آزمون:  "
            android:textColor="#000"
            android:textSize="16.75dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">
        <EditText
            android:id="@+id/answer_setup_azmoondahande"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="right"
            android:paddingRight="3dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ans_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="آزمون دهنده:  "
            android:textColor="#000"
            android:textSize="16.75dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:gravity="end">
        <TextView
            android:id="@+id/txt_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  دقیقه   "
            android:textColor="#000"
            android:textSize="16.75dp"/>
        <EditText
            android:id="@+id/answer_setup_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="right"
            android:paddingRight="3dp"/>
        <TextView
            android:id="@+id/ans_has_deadline_q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" آزمون زمان دارد؟   "
            android:textColor="#000"
            android:textSize="16.75dp"/>
        <CheckBox
            android:id="@+id/answer_setup_have_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">
        <EditText
            android:id="@+id/answer_setup_total_q"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="right"
            android:paddingRight="3dp"/>
        <TextView
            android:id="@+id/ans_q_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تعداد سوالات:  "
            android:textColor="#000"
            android:textSize="16.75dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <EditText
            android:id="@+id/answer_setup_first_q"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="right"
            android:paddingRight="3dp"/>
        <TextView
            android:id="@+id/ans_first_q_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="شماره اولین سوال:  "
            android:textColor="#000"
            android:textSize="16.75dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/answer_setup_sakhte_pasokhname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ساخت پاسخنامه"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_rectangle_purple"
            android:textColor="#FFF"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"/>
    </RelativeLayout>


</LinearLayout>