                <TextView
                    android:id="@+id/purposing_weekday_thursday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="@color/colorGray"
                    android:gravity="center"
                    android:text="@string/weekday_thursday"
                    android:textSize="@dimen/purposing_weekday_font"
                    android:textColor="@color/colorDark"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="1dp">

                <TextView
                    android:id="@+id/your_purpose_time_friday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="@color/colorBlueLight"
                    android:gravity="center"
                    android:textSize="@dimen/purposing_global_font"
                    android:textColor="@color/colorDark_1" />

