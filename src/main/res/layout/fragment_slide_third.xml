<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/third_slide_bg_color">

    <RelativeLayout
        android:id="@+id/first_launch_space_between"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/first_launch_space_between">

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".75"/>

        <RelativeLayout
            android:id="@+id/firat_lanch_slide_ui"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/slide_3_circle_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/slide_3_circle_1"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:scaleY="0"
                android:scaleX="0"/>

            <ImageView
                android:id="@+id/slide_3_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/balance"
                android:alpha="0"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:paddingTop="30dp"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/first_launch_slide_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/slide_title_mt"
            android:layout_marginBottom="@dimen/slide_title_mb"
            android:text="@string/slide_3_title"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:translationY="10dp"
            android:alpha="0"/>

        <TextView
            android:id="@+id/first_launch_slide_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:translationY="10dp"
            android:alpha="0"/>

    </LinearLayout>

</RelativeLayout>