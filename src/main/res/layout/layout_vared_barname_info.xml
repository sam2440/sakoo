<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/bg_mat">

    <RelativeLayout
        android:id="@+id/layout_vared_barname_info_icon_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sixth_slide_bg_color">

    <ImageView
        android:id="@+id/layout_vared_barname_info_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/information"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:adjustViewBounds="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@id/layout_vared_barname_info_icon_container"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layout_vared_barname_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="راهنمایی"
            android:textStyle="bold"
            android:textColor="@color/colorDark_1"
            android:layout_marginBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/layout_vared_barname_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:text="هر چی هست بگو هر چی هست بگو هر چی هست بگو هر چی هست بگو هر چی هست بگو هر چی هست بگوهر چی هست بگوهر چی هست بگوهر چی هست بگوهر چی هست بگوهر چی هست بگوهر چی هست بگوهر چی هست بگوهر چی هست بگو"
            android:textColor="@color/colorDark_2"
            android:layout_marginBottom="4dp"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical">

            <CheckBox
                android:id="@+id/layout_vared_barname_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/layout_vared_barname_checkbox_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/layout_vared_barname_checkbox"
                android:layout_centerVertical="true"
                android:text="دوباره نمایش داده نشود"
                android:textColor="@color/colorBlack"/>

        </RelativeLayout>

        <Button
            android:id="@+id/layout_vared_barname_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="باشه"
            android:textColor="@color/colorBlack"
            android:layout_gravity="right"
            android:layout_margin="13dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>