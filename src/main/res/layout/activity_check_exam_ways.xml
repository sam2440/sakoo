<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.goharshad.arena.sakoo.CheckExamWays">

    <android.support.v7.widget.Toolbar
        android:id="@+id/anscheckwaystoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#232323">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/anscheckwaystitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="انتخاب روش تصحیح"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_name_mr"
                android:textColor="@android:color/white"
                android:textSize="@dimen/activity_name_size"/>

            <ImageButton
                android:id="@+id/checkexamway_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:paddingRight="8dp"
                android:src="@drawable/ic_arrow_back_black_37dp" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/check_exam_key_checkbox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#ffae00"
            android:weightSum="5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:src="@drawable/test_exam" />

            <TextView
                android:id="@+id/ans_checkways_key"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="تصحیح با وارد کردن کلید"
                android:textColor="#ffffff"
                android:textSize="19dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/check_exam_key_string"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#7b0046"
            android:weightSum="5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:src="@drawable/numbering_signs" />

            <TextView
                android:id="@+id/ans_checkways_stringset"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="تصحیح با وارد کردن پاسخ رشته ای"
                android:textColor="#ffffff"
                android:textSize="19dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
