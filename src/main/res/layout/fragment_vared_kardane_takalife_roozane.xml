<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.goharshad.arena.sakoo.VaredKardaneTakalifeRoozane"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="@drawable/rounded_top_rectangle_dark"
        android:padding="6dp">

        <ImageView
            android:id="@+id/vared_kardane_barname_haftegi_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.25"
            android:src="@drawable/checked_white" />

        <TextView
            android:id="@+id/fragment_header_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/vared_kardane_barname_haftegi_back"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="3.5"
            android:gravity="center_vertical"
            android:text="وارد کردن برنامه هفتگی"
            android:textColor="@color/main_text_color1"
            android:textSize="15dp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_view_vared_kardane_taklif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_lightgray_1"
        android:fillViewport="false">

        <LinearLayout
            android:id="@+id/vared_kardane_taklif_scroll_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp">

        </LinearLayout>

    </ScrollView>

</LinearLayout>
